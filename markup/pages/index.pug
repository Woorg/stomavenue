    script.
      ymaps.ready(init);
      
      function init() {
        var myMap = new ymaps.Map('map', {
          center: [55.764187, 37.600882], // Москва
          zoom: 19
        }, {
          searchControlProvider: ''
        });

        var myPlacemark = new ymaps.Placemark(
          [55.764360, 37.601041], {
              balloonContent: 'Москва, Сытинский переулок, д. 5/10, стр. 3'
          }, {
              iconLayout: 'default#image',
              iconImageHref: 'assets/images/general/marker-icon.png',
              iconImageSize: [44, 62],
              iconImageOffset: [-10, -42]
          }      
        );

        myMap.geoObjects.add(myPlacemark);

      }


